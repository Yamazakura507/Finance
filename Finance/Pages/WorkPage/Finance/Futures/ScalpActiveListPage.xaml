<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:control="clr-namespace:Finance.CustomControl"
             xmlns:class="clr-namespace:Finance.Classes"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Finance.Pages.WorkPage.Finance.Futures.ScalpActiveListPage" Loaded="ContentPage_Loaded">

    <ContentPage.Resources>
        <toolkit:ByteArrayToImageSourceConverter x:Key="ByteArrayToImageSourceConverter" />
    </ContentPage.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <HorizontalStackLayout Grid.Row="0" HorizontalOptions="Start" VerticalOptions="Center">
            <ImageButton WidthRequest="50" Source="assets.png" Pressed="AddOrder_Pressed" x:Name="AddOrder" Aspect="AspectFit" Margin="15,5,5,5" VerticalOptions="Center" HorizontalOptions="Start"/>
            <control:Provaider IsVisible="Collapse" x:Name="ErrProvider" HorizontalOptions="Start" VerticalOptions="Center"/>
        </HorizontalStackLayout>

        <ScrollView Grid.Row="1" Grid.Column="0" Padding="10,5,10,5">
            <VerticalStackLayout>
                <VerticalStackLayout x:Name="debVSL" BindableLayout.ItemsSource="{Binding ViewScalpActiv}" Margin="0,10,0,10">
                    <BindableLayout.ItemTemplate>
                    <DataTemplate>
                            <Border Margin="0,5,0,5" Stroke="{AppThemeBinding Light={DynamicResource Primary}, Dark={DynamicResource Gray700}}" BackgroundColor="{AppThemeBinding Light={DynamicResource LightPrimary}, Dark={DynamicResource Gray800}}">
                                <Border.StrokeShape>
                                    <RoundRectangle CornerRadius="15"/>
                                </Border.StrokeShape>

                                <ContentView Margin="3" BackgroundColor="{AppThemeBinding Light={DynamicResource LightPrimary}, Dark={DynamicResource Gray800}}">
                                    <FlyoutBase.ContextFlyout>
                                        <MenuFlyout>
                                            <MenuFlyoutItem IconImageSource="delete_cash.png" Text="Удалить" Clicked="DeleteTask_Pressed"/>
                                            <MenuFlyoutItem IconImageSource="settings.png" Text="Именить тип" Clicked="EditTypeCommissionMenuFlyoutItem_Clicked"/>
                                        </MenuFlyout>
                                    </FlyoutBase.ContextFlyout>

                                    <SwipeView>
                                        <SwipeView.LeftItems>
                                            <SwipeItems>
                                                <SwipeItem Text="Удалить"
                                                   IconImageSource="delete_cash.png"
                                                   BackgroundColor="{AppThemeBinding Light={DynamicResource LightPrimary}, Dark={DynamicResource Gray800}}" 
                                                   Invoked="DeleteTask_Pressed"/>
                                                <SwipeItem Text="Именить тип"
                                                           IconImageSource="settings.png"
                                                           BackgroundColor="{AppThemeBinding Light={DynamicResource LightPrimary}, Dark={DynamicResource Gray800}}"
                                                           Invoked="EditTypeCommissionMenuFlyoutItem_Clicked"/>
                                            </SwipeItems>
                                        </SwipeView.LeftItems>
                                        
                                        <Grid>
                                            <Grid.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="ScalpActive_Tapped"/>
                                            </Grid.GestureRecognizers>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="55"/>
                                            </Grid.ColumnDefinitions>

                                            <Image WidthRequest="70" Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Source="{Binding TypeCommission.Icon, Converter={StaticResource ByteArrayToImageSourceConverter}}" Margin="0,0,5,0"/>

                                            <HorizontalStackLayout Grid.Row="1" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center">
                                                <Label Text="{Binding Name}" Style="{DynamicResource BoldItemLabel}" LineBreakMode="MiddleTruncation" HorizontalOptions="Start" VerticalOptions="Center" Margin="0,0,0,0"/>
                                                <Label Text="{Binding CountInFutures, StringFormat='(x{0})'}" Style="{DynamicResource ItemLabel}" LineBreakMode="MiddleTruncation" HorizontalOptions="Start" VerticalOptions="Center" Margin="5,0,0,0"/>
                                            </HorizontalStackLayout>

                                            <Label Text="{Binding TypeCommission.Name, StringFormat='{0}'}" Grid.Row="2" Grid.Column="1" Style="{DynamicResource ItemLabel}" HorizontalOptions="Start" VerticalOptions="Center" Margin="0,0,0,0"/>

                                            <HorizontalStackLayout Grid.Row="3" Grid.Column="1" HorizontalOptions="Start" VerticalOptions="Center">
                                                <Image WidthRequest="30" Source="bull.png" Margin="0,0,0,0" HorizontalOptions="Start" VerticalOptions="Center"/>
                                                <Label Text="{Binding GOLong, StringFormat='{0:F2}'}" Style="{DynamicResource BoldItemLabel}" HorizontalOptions="Start" VerticalOptions="Center" Margin="5,0,0,0"/>
                                                <Image WidthRequest="30" Source="bear.png" Margin="5,0,0,0" HorizontalOptions="Start" VerticalOptions="Center"/>
                                                <Label Text="{Binding GOShort, StringFormat='{0:F2}'}" Style="{DynamicResource BoldItemLabel}" HorizontalOptions="Start" VerticalOptions="Center" Margin="5,0,0,0"/>
                                            </HorizontalStackLayout>

                                            <ImageButton HeightRequest="50" Source="delete_cash.png" Pressed="DeleteTask_Pressed" VerticalOptions="Center" HorizontalOptions="Start" Grid.Column="2" Grid.Row="0" Grid.RowSpan="4" Aspect="AspectFit" Margin="0,0,10,0"/>
                                        </Grid>
                                    </SwipeView>
                                </ContentView>
                            </Border>
                    </DataTemplate>
                </BindableLayout.ItemTemplate>
            </VerticalStackLayout>
            <Button Text="Ещё" HorizontalOptions="FillAndExpand" Margin="5,0,5,10" VerticalOptions="FillAndExpand" BackgroundColor="{AppThemeBinding Light={DynamicResource LightPrimary}, Dark={DynamicResource Gray800}}" Pressed="btAddItem_Pressed" x:Name="btAddItem">
                <Button.Style>
                    <Style TargetType="Button">
                        <Style.Triggers>
                            <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={DynamicResource LightPrimary}, Dark={DynamicResource Gray800}}" />
                                <Setter Property="Shadow">
                                    <Setter.Value>
                                        <Shadow Brush="{AppThemeBinding Light={DynamicResource LightPrimary}, Dark={DynamicResource Gray800}}"
                                            Opacity="1"
                                            Radius="5"
                                            Offset="2,2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>